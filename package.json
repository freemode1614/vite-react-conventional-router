{
  "name": "@moccona/vite-plugin-react-conventional-router",
  "version": "0.1.0",
  "description": "Vite plugin for react conventional router",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsup --watch",
    "build": "cross-env NODE_ENV=production tsup",
    "e2e": "pnpm pree2e && playwright test",
    "test": "vitest --watch=false",
    "coverage": "vitest run --coverage",
    "prepublishOnly": "pnpm e2e && pnpm test && pnpm build",
    "pree2e": "pnpm exec playwright install"
  },
  "keywords": [
    "vite-react",
    "react-router",
    "vite-router",
    "router"
  ],
  "author": "wp.l",
  "license": "MIT",
  "exports": {
    "./package.json": "./package.json",
    "./client": {
      "types": "./client.d.ts"
    },
    ".": {
      "types": "./npm/index.d.ts",
      "import": "./npm/index.js",
      "require": "./npm/index.cjs"
    }
  },
  "dependencies": {
    "@rollup/pluginutils": "^5.1.2",
    "fast-glob": "^3.3.2",
    "glob-to-regexp": "^0.4.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.8",
    "@moccona/eslint-config": "^0.3.5",
    "@moccona/prettierrc": "^0.0.4",
    "@playwright/test": "^1.47.1",
    "@types/glob-to-regexp": "^0.4.4",
    "@types/node": "^20.16.5",
    "@types/react": "^18.3.3",
    "@vitest/coverage-istanbul": "^2.1.1",
    "cross-env": "^7.0.3",
    "playwright": "^1.47.1",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-router": "^6.26.2",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.6",
    "vitest": "^2.1.1"
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-router": "^6.26.2",
    "vite": "5"
  },
  "prettier": "@moccona/prettierrc",
  "packageManager": "pnpm@9.7.1"
}
